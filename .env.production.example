# Production Environment Variables Template
# Copy this file to .env and fill in your production values

# API Configuration
API_URL=https://your-domain.com/api
FRONTEND_URL=https://your-domain.com

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_production_jwt_secret_min_64_chars

# MySQL Database Configuration
MYSQL_HOST=your_production_db_host
MYSQL_USER=your_production_db_user
MYSQL_PASSWORD=your_production_db_password
MYSQL_DATABASE=projects
MYSQL_PORT=3306

# Email Configuration (for password reset)
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASSWORD=your_production_app_password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://your-domain.com/api/auth/google/callback

# Server Configuration
PORT=3000
NODE_ENV=production
